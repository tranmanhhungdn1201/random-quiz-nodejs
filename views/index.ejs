<% include ./layout/header %>

    <div class="Subject">
        <% subjects.forEach(item=>{ %>
            <a class="Subject__Item" href="/<%=item.slug%>">
                <div class="Subject__Item__Name">
                    <%=item.name%>
                </div>
                <div class="Subject__Item__Info">
                    <div class="Subject__Item__Info__Total"><b>Tổng: </b></b>
                        <%=item.questions.length%> câu</div>
                    <div class="Subject__Item__Info__Easy"><b>Dễ: </b>
                        <%=item.easy%> câu</div>
                    <div class="Subject__Item__Info__Medium"><b>Vừa: </b>
                        <%=item.medium%> câu</div>
                    <div class="Subject__Item__Info__Hard"><b>Khó: </b>
                        <%=item.hard%> câu</div>
                </div>
            </a>
            <% }) %>
    </div>

    <% include ./layout/footer %>