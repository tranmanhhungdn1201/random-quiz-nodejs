        function getInfoSubject(subjecId){
            const url = `/subjects/get-num/${subjecId}`;
            const options = {
                method: 'GET',
                url: url,
                error: function(err){
                    console.log('Error', err.message);
                }
            }
            return $.ajax(options);
        }

        function setNumQuestion(numQuestion) {
            // set label easy
            let eleELabel = $('.num-easy-label');
            eleELabel.empty();
            eleELabel.append(` Số câu dễ <i class="text-danger"> (${numQuestion.numE} )</i>`);
            // set label medium
            let eleMLabel = $('.num-med-label');
            eleMLabel.empty();
            eleMLabel.append(` Số câu trung bình <i class="text-danger"> (${numQuestion.numM} )</i>`);
            // set label hard
            let eleHLabel = $('.num-hard-label');
            eleHLabel.empty();
            eleHLabel.append(` Số câu khó <i class="text-danger"> (${numQuestion.numH} )</i>`);
        }

        $('#select-subject').change(function(){
            const subjectId = this.value;
            if(!subjectId) return;
            const numQuestion = getInfoSubject(subjectId).then(function(res) {
                setNumQuestion(res.numQuestion);
            }).catch(function(err) {
                console.log('Error', err.message);
            });
        });
    </script>
