<!-- Modal -->
<div class="modal"id="modalEditQuestion" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Chỉnh sửa câu hỏi</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="FormEditQuestion" class="FormQuestion">
                <input type="hidden" name="id">
                <div class="form-group">
                    <label class="font-weight-bold">Loại câu hỏi</label>
                    <select name="level" class="form-control">
                        <option value="D">Dễ</option>
                        <option value="V">Trung bình</option>
                        <option value="K">Khó</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Nội dung</label>
                    <textarea name="content" class="form-control" id="" cols="30" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Đáp án</label>
                    <ul class="list-unstyled listAnswer">
                        <li>
                            <div class="d-flex align-items-center">
                                <span class="col-sm-1">A. </span>
                                <input type="text" class="form-control" name="answers">
                                <input type="checkbox" name="indexResult" data-index="0" value="0" class="form-control col-sm-1">
                            </div>
                        </li>
                        <li>
                            <div class="d-flex align-items-center">
                                <span class="col-sm-1">B. </span>
                                <input type="text" class="form-control" name="answers">
                                <input type="checkbox" name="indexResult" data-index="1" value="1" class="form-control col-sm-1">
                            </div>
                        </li>
                        <li>
                            <div class="d-flex align-items-center">
                                <span class="col-sm-1">C. </span>
                                <input type="text" class="form-control" name="answers">
                                <input type="checkbox" name="indexResult" data-index="2" value="2" class="form-control col-sm-1">
                            </div>
                        </li>
                        <li>
                            <div class="d-flex align-items-center">
                                <span class="col-sm-1">D. </span>
                                <input type="text" class="form-control" name="answers">
                                <input type="checkbox" name="indexResult" data-index="3" value="3" class="form-control col-sm-1">
                            </div>
                        </li>
                    </ul>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="btnUpdateNewQuestion">Lưu</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
        </div>
    </div>
</div>